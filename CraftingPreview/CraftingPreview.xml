<GuiXml>
	<Controls>
		<Control name="VariationWindow" hidden="true">
			<OnInitialized>
				CraftingPreview_OnInitialize(self)
			</OnInitialized>
            
			<Controls>

				<Label name="$(parent)Label" font="ZoFontWinH2" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" horizontalAlignment="CENTER" level="2" >
					<Dimensions x="350"/>
					<Anchor point="BOTTOM" offsetY="-10" />
				</Label>

				<Button name="$(parent)LeftArrow" inherits="ZO_DefaultButton" level="3" >
					<Dimensions x="64" y="64"/>
					<Anchor point="RIGHT" relativeTo="$(parent)VariationLabel" relativePoint="LEFT" offsetX="-72" offsetY="-24" />
					<Textures
						normal="EsoUI/Art/Buttons/large_leftArrow_up.dds"
						pressed="EsoUI/Art/Buttons/large_leftArrow_down.dds"
						mouseOver="EsoUI/Art/Buttons/large_leftArrow_over.dds"
					/>
				</Button>

				<Button name="$(parent)RightArrow" inherits="ZO_DefaultButton" level="3" >
					<Dimensions x="64" y="64"/>
					<Anchor point="LEFT" relativeTo="$(parent)VariationLabel" relativePoint="RIGHT" offsetX="72" offsetY="-24" />
					<Textures
						normal="EsoUI/Art/Buttons/large_rightArrow_up.dds"
						pressed="EsoUI/Art/Buttons/large_rightArrow_down.dds"
						mouseOver="EsoUI/Art/Buttons/large_rightArrow_over.dds"
					/>
				</Button>
			</Controls>
		</Control>
	</Controls>
</GuiXml>